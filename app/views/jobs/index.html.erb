<p id="notice"><%= notice %></p>
<h1>Listing Jobs</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Sunday date</th>
      <th>Send at</th>
      <th>Hotel</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.sunday_date.strftime('%m/%d/%Y') %></td>
        <td><%= job.send_at.strftime('%m/%d/%Y')  %></td>
        <td><%= link_to job.hotel.name, hotel_path(job.hotel)%></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
