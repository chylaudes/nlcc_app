<p id="notice"><%= notice %></p>
<h1>Listing Jobs</h1>
<table>
  <thead>
    <tr>
      <th>Sunday date</th>
      <th>Send at</th>
      <th>Hotel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.sunday_date %></td>
        <td><%= job.send_at %></td>
        <td><%= link_to job.hotel.name, hotel_path(job.hotel)%></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
