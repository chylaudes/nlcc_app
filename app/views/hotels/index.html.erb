<p id="notice"><%= notice %></p>
<h1>Listing Hotels</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Map link</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%=link_to hotel.name, hotel_path(hotel), class:"btn btn-link" %></td>
        <td><%= hotel.address %></td>
        <td><%= link_to "Link to Google Map", hotel.map_link %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hotel', new_hotel_path %>
